            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHECK BEARING" />

        </LinearLayout>

        <!--<LinearLayout
            android:id="@+id/linearlayout"
